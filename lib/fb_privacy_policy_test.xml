			</attribute>
			<attribute type="languages">
				<attribute-policy allow="retrieve"></attribute-policy>
			</attribute>
			<attribute type="bio">
				<attribute-policy allow="retrieve"></attribute-policy>
			</attribute>
			<attribute type="politicalViews">
				<attribute-policy allow="retrieve"></attribute-policy>
			</attribute>
			<attribute type="religion">
				<attribute-policy allow="retrieve"></attribute-policy>
			</attribute>
			
			<attribute type="education">
				<attribute-policy allow="retrieve"></attribute-policy>
			</attribute>
			<attribute type="work">
