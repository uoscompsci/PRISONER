			</attribute>
			<attribute type="timezone">
				<attribute-policy allow="retrieve"></attribute-policy>
			</attribute>
		</attributes>
		
		<object-policy allow="retrieve">
			<object-criteria>
				<and-match>
					<attribute-match match="author.id" on_object="session:Facebook.id" />
				</and-match>
			</object-criteria>	
		</object-policy>
	</policy>
	
